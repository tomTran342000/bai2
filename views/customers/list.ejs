<!DOCTYPE html>
  <html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Document</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  </head>
  <body>
      <%- include('../part/header') %>
      <div class="container">
        <table class="table table-hover mt-5">
          <thead>
            <tr>
              <th scope="col">Customer name</th>
              <th scope="col">Old</th>
              <th scope="col">Edit modal</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <%
              for(let i = 0; i < customers.length; i++) {%>
                <tr>
                  <th id="name<%= customers[i]._id %>"><%= customers[i].name %></th>
                  <td id="old<%= customers[i]._id %>"><%= customers[i].old %></td>
                  <td><button id="<%=customers[i]._id %>" type="button" class="btn btn-primary doClick" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Edit modal
                  </button></td>
                  <td>
                    <a href="
                    /customer/edit/<%= customers[i]._id %>" type="button" class="btn btn-warning">Edit</a>
                    <a href="
                    /customer/delete/<%= customers[i]._id %>" type="button" class="btn btn-danger">delete</a>
                  </td>
                </tr>
              <%}
            %>
          </tbody>
        </table>
      </div>
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div><h1>Edit customer</h1></div>
              <form >
                  <div class="mb-3 ">
                    <label class="form-label">Name</label>
                    <input  type="text" class="form-control" id="name">
                 
                  </div>
                  <div class="mb-3 ">
                    <label class="form-label">Old</label>
                    <input type="text" class="form-control" id="old">
                  </div>
                  
                  
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
      <script>
        const doClick=document.getElementsByClassName('doClick')
        for(let i=0;i<doClick.length;i++){
          doClick[i].addEventListener('click',show)
        }
        function show(){
          const id=this.id

          document.getElementById('name').value=document.getElementById('name'+id).innerHTML
          document.getElementById('old').value=document.getElementById('old'+id).innerHTML
        }
      </script>
  </body>
  </html>